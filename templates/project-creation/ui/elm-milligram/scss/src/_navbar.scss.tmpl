.navbar {
  margin-bottom: 10px;
}

.navbar ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: $navbar-bg-color;
}

.navbar li {
    float: left;
    margin-bottom: 0;

    & a {
        display: block;
        color: $navbar-fg-color;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        &:hover {
            background-color: $color-secondary;
            color: $color-initial;
        }
    }

    &.active a {
        background-color: $color-primary;
        color: $color-initial;
    }
}
